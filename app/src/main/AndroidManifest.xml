<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shepherdjerred.civilopedia">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".building.BuildingListActivity"
            android:label="@string/title_building_list"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shepherdjerred.civilopedia.MainActivity" />
        </activity>
        <activity
            android:name=".building.BuildingDetailActivity"
            android:label="@string/title_building_detail"
            android:parentActivityName=".building.BuildingListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shepherdjerred.civilopedia.building.BuildingListActivity" />
        </activity>
        <activity
            android:name=".unit.UnitListActivity"
            android:label="@string/title_unit_list"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shepherdjerred.civilopedia.MainActivity" />
        </activity>
        <activity
            android:name=".unit.UnitDetailActivity"
            android:label="@string/title_unit_detail"
            android:parentActivityName=".unit.UnitListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shepherdjerred.civilopedia.unit.UnitListActivity" />
        </activity>
        <activity
            android:name=".civilization.CivilizationListActivity"
            android:label="@string/title_civilization_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shepherdjerred.civilopedia.MainActivity" />
        </activity>
        <activity
            android:name=".civilization.CivilizationDetailActivity"
            android:label="@string/title_civilization_detail"
            android:parentActivityName=".civilization.CivilizationListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shepherdjerred.civilopedia.civilization.CivilizationListActivity" />
        </activity>
    </application>

</manifest>